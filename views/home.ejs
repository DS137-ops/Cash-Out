                margin-left: 20px;
                background-color: aquamarine;
                border-radius: 30px;
            }

            .innerdiv:hover {
                transform: scale(1.1, 1.1);
            }

            .inner1 {
                animation: innerani1 1s alternate;
                transition: .5s all ease-out;
            }

            .inner2 {
                animation: innerani2 1s alternate;
                transition: .5s all ease-out;
            }

            .inner3 {
                animation: innerani3 1s alternate;
                transition: .5s all ease-out;
            }

            @keyframes innerani1 {
                0% {
                    transform: translateX(-200%);
                }

                100% {}
            }

            @keyframes innerani2 {
                0% {
                    transform: translateY(200%);
                }

                100% {}
            }

            @keyframes innerani3 {
                0% {
                    transform: translateX(200%);
                }

                100% {}
            }

            strong {
                font-size: 30px;

            }

            @media (max-width:767px) {
                .div3 {
                    display: block;

                }

                .div3 div {
                    width: 100%;
                    margin-top: 20px;
                    margin-left: 0px;

                }
            }

            .header {
                text-align: center;
                border-bottom: 2px solid #302b63;
            }

            .c_char {
                color: rgb(0, 72, 255);
                font-size: 30px;
            }

            .ache {
                font-size: 25px;
