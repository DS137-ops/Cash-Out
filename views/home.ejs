            .grid {
                display: grid;
                grid-template-columns: repeat(12, 1fr);
                grid-template-rows: minmax(200px, auto);
                grid-template-areas:
                    ". div1 div1 div1 div1 . . div2 div2 div2 div2 ."
                    ". div1 div1 div1 div1 . . div2 div2 div2 div2 ."
                    ". div1 div1 div1 div1 . . div2 div2 div2 div2 ."
                    ". . . . . . . . . . . ."
                    ". div3 div3 div3 div3 div3 div3 div3 div3 div3 div3 ."
                ;
                grid-gap: 25px;
            }

            .div1 {
                grid-area: div1;
                padding: 10px;
                grid-column: 1/8;
                color: aliceblue;
                font-size: 18px;
                z-index: 1;
                animation: 1s ease-out 0s 1 loading;
            }

            @keyframes loading {
                0% {
                    transform: translateX(-200%);
                }
            }

            .div2 {
                grid-area: div2;
                grid-column: 8/12;
                animation: 1s ease-out 0s 1 loading2;
            }

            @keyframes loading2 {
                0% {
                    transform: translateX(200%);
                }
            }

            .div3 {
                grid-area: div3;
                margin-top: -100px;
                display: flex;
                
            }

            .img1 {
                width: 100%;
                height: 100%;
