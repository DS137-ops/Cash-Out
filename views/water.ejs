        grid-area: in2;
        border-top: 1px solid black;
        padding-top: 10px;
        text-align: center;
        display: flex;
      }

      .in2>diV {
        width: 50%;
        color: #fff;
        text-align: left;
      }

      .in3 {
        grid-area: in3;
      }

      .menu {
        font-size: 20px;
      }

      .addBill {
        float: right;
      }

      table {
        border-collapse: collapse;
        border: 2px solid rgb(140 140 140);
