        <div class="menu">Water Bills</div>
        <div>
          <button class="addBill btn btn-success">Add new Bill</button>
        </div>
      </div>
      
      <div class="in3">
        <table style="border: none;">

          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Value</th>
              <th scope="col">Date</th>
              <th scope="col">Photo</th>
             
            </tr>
          </thead>
          <tbody>
            <% for(let datawater of waterdata){ %>
            <tr>
              <th scope="row"><%- datawater.name  %></th>
              <td><%- datawater.value  %></td>
              <td><%- datawater.date  %></td>
              <td><img width="50" height="50" src="/uploads/<%= datawater.photo %>" alt=""></td>
              <td><a class="btn btn-danger" href="/water/deleteWater/<%= datawater._id %>" >Delete</a></td>
            </tr>
            <% } %>
          </tbody>

        </table>
      </div>
    </div>
    <script>
      var addBill = document.getElementsByClassName("addBill")[0];
      addBill.addEventListener("click", () => {
        document.getElementsByClassName("tog")[0].classList.add("showw")
        document.getElementsByClassName("tog")[0].classList.remove("hidd")
      })



      $(function () {
        $(".x").load("addbills.ejs")[0].addEventListener("click", () => {
          document.getElementsByClassName("tog")[0].classList.remove("showw")
          document.getElementsByClassName("tog")[0].classList.add("hidd")
        });
      });

    </script>
