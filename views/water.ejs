    <div class="tog hidd">
      <form action="/addwaterbill" method="post" enctype="multipart/form-data">
        <div class="AddBillInterFace">
          <div style="display: flex; width: 100%; ">
            <header
              style="text-align: center; width:90%; font-size: 27px; margin: auto; font-weight: 600; border-bottom: 1px solid blue;">
              Your bill information</header><svg width="24" height="24" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
              fill="currentColor" id="x" class="x ui-svg-inline" style="position: absolute; right:5px;cursor: pointer; ">
              <path class=""
                d="M13.41,12l4.3-4.29a1,1,0,1,0-1.42-1.42L12,10.59,7.71,6.29A1,1,0,0,0,6.29,7.71L10.59,12l-4.3,4.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0L12,13.41l4.29,4.3a1,1,0,0,0,1.42,0,1,1,0,0,0,0-1.42Z">
              </path>
            </svg>
          </div><br>
          <div class="bodyAddbill">
            
            <div class="divInfo divInfo1">
              <div style="margin: auto;"><label for="name"
                  class="labeName">Name</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="text" data_mat="fgt"  class="inputName"
                  placeholder="Name of bill" name="name"></div>
            </div>
            <div class="divInfo divInfo2">
              <div style="margin: auto;"><label for="value"
                  class="labeName">Value</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="number" class="inputName"
                  placeholder=" XX $" name="value"></div>
            </div>
            <div class="divInfo divInfo3">
              <div style="margin: auto;"><input style="" type="date" value="" class="inputName inputdate"
                  placeholder="YYYY-MM-DD" name="date" id="currentDate"></div>
            </div>
            <div class="divInfo divInfo4">
              <div style="margin: auto;"><label for="file-upload" class="custom-file-upload" style="color:#fff">
                  Upload bill photo
                </label>
                <input id="file-upload" type="file" name="photo" />
              </div>
            </div>
            <div class="divInfo divInfo5">
              <button class="editdata btn btn-success">Upload</button>
            </div>
          </div>
