        opacity: .7;

      }
tbody > tr:nth-of-type(n){
  background-color: white;
}
      .in1 {
        grid-area: in1;
        animation: elemove 1s alternate-reverse 1s;
        display: flex;
        position: relative;
      }

      .in1>div {
        width: 33.33%;
      }

      #in2hidd {
        text-align: center;
        margin-top: auto;
        margin-bottom: auto;
        font-size: 30px;
        color: #fff;
      }

